  <label  class='mood-labels' for="sad"><i class="fas fa-sad-cry "></i></label>
</div>
<div class='mood-icn'>
  <input class='mood-inputs' type="radio" id="scared" name="mood" value="fa-flushed">
  <label  class='mood-labels' for="scared"><i class="fas fa-flushed "></i></label>
</div>
<div class='mood-icn'>
  <input class='mood-inputs' type="radio" id="angry" name="mood" value="fa-angry"></input>
  <label  class='mood-labels' for="angry"><i class="fas fa-angry "></i></label>
</div>
</div>
  </div>
</form>
</div>
